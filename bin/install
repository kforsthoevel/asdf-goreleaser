#!/usr/bin/env bash

set -e
set -o pipefail

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE:-version  }
TMPDIR=${TMPDIR:-/tmp}
[ -n "$ASDF_INSTALL_VERSION" ] || (echo >&2 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (echo >&2 'Missing ASDF_INSTALL_PATH' && exit 1)

install_goreleaser() {
  local install_type
  # shellcheck disable=SC2034
  install_type=$1
  local version
  version=$2
  local install_path
  install_path=$3
  local bin_install_path
  bin_install_path="$install_path/bin"
  local download_url
  download_url="$(get_download_url "$version")"
  local ext
  ext="$(get_ext)"

  mkdir -p "${bin_install_path}"

  local bin_path="${bin_install_path}/goreleaser"
  echo "Downloading GoReleaser from ${download_url}"
  curl -sSL "$download_url" -o "${install_path}/goreleaser.${ext}"
  if [ "$ext" == "tar.gz" ]; then
    tar xzf "${install_path}/goreleaser.tar.gz" -C "${install_path}"
  else
    unzip -qq "${install_path}/goreleaser.zip" -d "${install_path}"
  fi
  mv "${install_path}/goreleaser" "${bin_path}"
  chmod +x "$bin_path"
  rm -rf "${install_path}/goreleaser.${ext}"
}

get_arch() {
  arch=$(uname -m | tr '[:upper:]' '[:lower:]')
  case ${arch} in
    arm64)
      arch='arm64'
      ;;
    arm6)
      arch='arm6'
      ;;
    x86_64)
      arch='x86_64'
      ;;
    aarch64)
      arch='arm64'
      ;;
    i386)
      arch='i386'
      ;;
  esac

  if [ "$(get_platform)" == "Darwin" ]; then
    arch='all'
  fi

  echo ${arch}
}

get_platform() {
  plat=$(uname | tr '[:upper:]' '[:lower:]')
  case ${plat} in
    darwin)
      plat='Darwin'
      ;;
    linux)
      plat='Linux'
      ;;
    windows)
      plat='Windows'
      ;;
  esac

  echo ${plat}
}

get_ext() {
  plat=$(uname | tr '[:upper:]' '[:lower:]')
  case ${plat} in
    windows)
      ext='zip'
      ;;
    *)
      ext='tar.gz'
      ;;
  esac

  echo ${ext}
}

get_download_url() {
  local version
  version="$1"
  local arch
  arch="$(get_arch)"
  local platform
  platform="$(get_platform)"
  local ext
  ext="$(get_ext)"
  echo "https://github.com/goreleaser/goreleaser/releases/download/v${version}/goreleaser_${platform}_${arch}.${ext}"
}

install_goreleaser "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
